@model _60331_Glotov.DAL.Book


<div class="col-md-4">
    <div class="thumbnail">
        <img style="height: 250px; width: 175px;"  src="@Url.Action("GetImage", "Book", new { id = Model.BookId })" alt="NoImage" class="img-thumbnail"/>
        
        <div class="caption">
            <div style="height: 90px; width: 210px;" class="item-name">
                <h3>@Model.BookName</h3>
            </div>
            <div style="height: 70px; width: 210px;" class="item-description">
                @Model.Description
            </div>
            <div class="centered">
                <h3 class="badge">@Model.Price руб.</h3>
            </div>
            <div class="centered">                
                <a id="button" href="@Url.Action("AddToCart", "Cart", new { id = Model.BookId, returnUrl = Request.Path })" class="btn btn-primary">         
                    <span class="glyphicon glyphicon-shopping-cart"></span> В корзину
                </a>
            </div>
        </div>
    </div>
</div>