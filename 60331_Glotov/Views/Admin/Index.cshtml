@model IEnumerable<_60331_Glotov.DAL.Book>

@{
    ViewBag.Title = "Index";
}

@*<h2>Index</h2>*@

<p>
    <h3>@Html.ActionLink("Добавить", "Create")</h3>
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.BookName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CategoryName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink(Html.DisplayFor(modelItem => item.BookName).ToString(), "Edit", new { id = item.BookId })
            
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CategoryName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>            
            @Html.ActionLink("Удалить", "Delete", new { id=item.BookId })
        </td>
    </tr>
}

</table>

